<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<%- include('../partials/Modal'); %>
<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="jumbotron">
            <h2>Quote</h2>
            <div>
                <button class="btn btn-link" id="myBtn">Add New Quote</button>
    
                <div id="myModal" class="modal">
    
                    <!-- Modal content -->
                    <div class="modal-content">
                      <span class="close">&times;</span>
                      <form action="/quote/add" method="post">
                        <h2>Add New Quote</h2>
                        <div class="col-xs-3">
                            <label for="ex1">Service Name</label>
                            <input class="form-control" name="servicename" id="ex1" type="text">
                            <label for="ex1">Comments</label>
                            <input class="form-control" name="comments" id="ex1" type="text">
                            <label for="ex1">Total</label>
                            <input class="form-control" name="totalcost" id="ex1" type="text"><BR>
                            <button type="submit" style="background-color:#198754" class="btn btn-success">Submit</button>
                        </div>
                    </form> 
                    </div>
                  
                </div>
                
                <button class="btn btn-link" id="myBtn2">Update Existing Quote</button>
    
                <div id="myModal2" class="modal">
    
                    <!-- Modal content -->
                    <div class="modal-content">
                      <span class="close2">&times;</span>
                      <h2 class="text-center">Update Existing Quote</h2>
                                <form action="/quote/update/info" method="post">
                                    <div class="jumbotron">
                                        <!--drop down for Job ID -->
                                        <label for="ex1">Select the Quote ID You Wish To Update</label>
                                          <select class="form-control" name="quote_list" id="mainid">
                                            <% quote_list.forEach(function(quote_list) { %>              
                                              <option value=<%= quote_list.quote_id%>><%= quote_list.quote_id%></option>
                                            <% }); %>
                                          </select>
                                        <br>
                                        <button type="submit" style="color:#198754" class="btn btn-success">Submit</button>
                                      </div> 
                                </form>
                    </div>
                    
                </div>
                <button class="btn btn-link" id="myBtn3">Delete Existing Quote</button>
    
                <div id="myModal3" class="modal">
    
                    <!-- Modal content -->
                    <div class="modal-content">
                      <span class="close3">&times;</span>
                      <h2 class="text-center">Delete Existing Quote</h2>
                                <form action="/quote/delete" method="post">
                                    <div class="jumbotron">
                                        <!--drop down for Job ID -->
                                        <label for="ex1">Select the Quote ID You Wish To Delete</label>
                                          <select class="form-control" name="quote_list" id="mainid">
                                            <% quote_list.forEach(function(quote_list) { %>              
                                              <option value=<%= quote_list.quote_id%>><%= quote_list.quote_id%></option>
                                            <% }); %>
                                          </select>
                                        <br>
                                        <button type="submit" style="color:#198754" class="btn btn-success">Submit</button>
                                      </div> 
                                </form>
                    </div>
                    
                </div>
            </ul>
        </div>
        <div>
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>Quote ID</th>
                        <th>Name</th>
                        <th>Appointment Date</th>
                        <th>Service</th>
                        <th>Comments</th>
                        <th>Quote</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% quote_list.forEach(function(quote_list) { %>
                <tr><td><%=quote_list.quote_id%></td>
                    <td><%=quote_list.last_name%>, <%= quote_list.first_name%></td>
                    <td><%= quote_list.app_date%></td>
                    <td><%= quote_list.service_name%></td>
                    <td><%= quote_list.comments%></td>
                    <td>$<%= quote_list.total_cost%></td>
                </tr>
                <% }); %>
               
            </tbody>
            </table>    
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>